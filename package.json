{
	"name": "serverless-ssr-react-lambda-at-edge",
	"version": "1.0.0",
	"author": "Mikael Vesavuori",
	"description": "React Server(less)-Side Rendering on AWS Lambda@Edge",
	"dependencies": {
		"@loadable/component": "^5.13.1",
		"core-js": "3.6.5",
		"path": "^0.12.7",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-router-dom": "^5.2.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.4",
		"@babel/core": "^7.10.4",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-syntax-class-properties": "^7.10.4",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.10.4",
		"@babel/preset-react": "^7.10.4",
		"@loadable/babel-plugin": "^5.13.0",
		"@loadable/server": "^5.13.1",
		"@loadable/webpack-plugin": "^5.13.0",
		"babel-loader": "^8.1.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"copy-webpack-plugin": "^6.0.3",
		"css-loader": "^3.6.0",
		"file-loader": "^6.0.0",
		"html-loader": "^1.1.0",
		"html-webpack-plugin": "^4.3.0",
		"prop-types": "^15.7.2",
		"script-ext-html-webpack-plugin": "^2.1.4",
		"serverless-webpack": "^5.3.2",
		"style-loader": "^1.2.1",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0"
	},
	"scripts": {
		"start": "npm run build && npm run deploy",
		"build": "npm run build:client && npm run build:server",
		"deploy": "npm run deploy:client && npm run deploy:server",
		"dev": "webpack-dev-server --config webpack.dev.js --open --mode development",
		"debug:compiled": "sls package && mkdir -p ./.serverless/__temp__ && unzip ./.serverless/lambda-at-edge-react-ssr.zip -d ./.serverless/__temp__ && code ./.serverless/__temp__/server/server.js",
		"build:client": "rm -rf dist && webpack --config webpack.client.js",
		"deploy:client": "aws s3 sync --delete ./dist s3://<your-bucket>",
		"build:server": "sls package",
		"deploy:server": "sls deploy"
	}
}
